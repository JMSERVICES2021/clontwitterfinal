<% content_for :title, "New Tweet" %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Crear un Nuevo Tweet</h1>

  <div class="card">
    <div class="card-body">
      <%= render "form", tweet: @tweet %>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "Volver a Tweets", tweets_path, class: "btn btn-secondary" %>
  </div>
</div>
